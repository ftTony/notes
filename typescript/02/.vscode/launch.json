    "version": "0.2.0",
    "configurations": [
        {
            "type": "ts-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
              ],
            "args": [
                "${workspaceRoot}/index.ts"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}